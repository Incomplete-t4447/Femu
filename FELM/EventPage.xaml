                    <Button Name="KopierEvent_button" Content="Kopier Event" Style="{DynamicResource eventBtn}" Margin="0,1" Click="CopyEvent_Button"/>
                </StackPanel>

                <StackPanel Name="SpecificEventButtons2" HorizontalAlignment="Center" VerticalAlignment="Center"  Width="130" Height="179" Grid.Row="0" Grid.Column="2" Margin="239,32,297,37"  Visibility="Collapsed">

                    <Button x:Name="FølgeSeddelButton" Content="Lav Følgeseddel" Style="{DynamicResource eventBtn}" Margin="0,1" Click="seddel_button" />
                    <Button x:Name="pdfButton" Content="Export til PDF" Style="{DynamicResource eventBtn}" Margin="0,1" Click="ExportPdf_Click" />
                    <Button x:Name="GemEventCSV_Button" Content="Gem som CSV" Style="{DynamicResource eventBtn}" Margin="0,1" Click="ExportCsv_Click"/>






                </StackPanel>




                <Border
                    Grid.Row="1"
                    Grid.Column="0"
                    x:Name="EventsInputBorder"
                    Padding="1"
                    CornerRadius="25"
                    BorderThickness="0"

                    SnapsToDevicePixels="True"
                    Margin="30">

                    <Border.Effect>
                        <DropShadowEffect/>
                    </Border.Effect>

                    <Border.BorderBrush>
                        <SolidColorBrush Color="#FF008D7A" Opacity="0.5"/>
                    </Border.BorderBrush>

                    <Border.Background>
                        <SolidColorBrush Color="#FF002657" Opacity="0.5"/>
                    </Border.Background>



                </Border>
                <ScrollViewer Grid.Row="1" Grid.Column="0" x:Name="EventsBoxes" VerticalScrollBarVisibility="Auto" Visibility="Visible" Margin="30,60,30,50">
                    <StackPanel Orientation="Vertical" x:Name="Events" Margin="14">
                        <Label x:Name="Eventnavn"
                                Content="*Event navn:"
                                Foreground="LightGray"
                                VerticalContentAlignment="Center"
                                HorizontalContentAlignment="Left"
                                FontWeight="Bold"
                            />

                        <Border Style="{DynamicResource eventBox}">
                            <TextBox x:Name="EventName" Background="Transparent" BorderThickness="0" KeyDown="nextEnter"/>
                        </Border>

                        <Label x:Name="StartDato"
                                Content="*Start Dato:"
                                Foreground="LightGray"
                                VerticalContentAlignment="Center"
                                HorizontalContentAlignment="Left"
                                FontWeight="Bold"
                            />

                        <Border Style="{DynamicResource eventBox}">
                            <Grid>
                                <!--<TextBox x:Name="StartDatoBox" Background="Transparent" BorderThickness="0" KeyDown="nextEnter"/>-->
                                <DatePicker x:Name="DatePickerStart" FirstDayOfWeek="Monday" Text="Vælg en Dato!" SelectedDateChanged="DatePickerStart_SelectionChanged" CalendarClosed="DatePickerStart_CalendarClosed"></DatePicker>
                            </Grid>
                        </Border>

                        <Label x:Name="SlutDato"
                                Content="*Slut Dato:"
                                Foreground="LightGray"
                                VerticalContentAlignment="Center"
                                HorizontalContentAlignment="Left"
                                FontWeight="Bold"
                            />

                        <Border Style="{DynamicResource eventBox}">
                            <Grid>
                                <!--<TextBox x:Name="SlutDatoBox" Background="Transparent" BorderThickness="0" KeyDown="nextEnter"/>-->
                                <DatePicker x:Name="DatePickerSlut" FirstDayOfWeek="Monday" Text="Vælg en Dato!" CalendarClosed="DatePickerSlut_CalendarClosed"></DatePicker>
                            </Grid>
                        </Border>

                        <Label x:Name="Note"
                                Content="Note:"
                                Foreground="LightGray"
                                VerticalContentAlignment="Center"
                                HorizontalContentAlignment="Left"
                                FontWeight="Bold"
                            />

                        <Border  Style="{DynamicResource eventBox}">
                            <TextBox x:Name="NoteBox" Background="Transparent" BorderThickness="0" KeyDown="nextEnter"/>
                        </Border>

                        <Label x:Name="DieselstanderStart"
                                Content="Diesel stander Start:"
                                Foreground="LightGray"
                                VerticalContentAlignment="Center"
                                HorizontalContentAlignment="Left"
                                FontWeight="Bold"
                            />

                        <Border Style="{DynamicResource eventBox}">
                            <Grid>
                                <TextBox x:Name="DieselstanderStartBox"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 PreviewTextInput="NumberValidation"
                                 CommandManager.PreviewExecuted="textBox_PreviewExecuted"
                                 ContextMenu="{x:Null}"
                                 KeyDown="nextEnter"/>
                            </Grid>

                        </Border>

                        <Label x:Name="DielselstanderSlut"
                                Content="Dielsel stander Slut:"
                                Foreground="LightGray"
                                VerticalContentAlignment="Center"
                                HorizontalContentAlignment="Left"
                                FontWeight="Bold"

                            />

                        <Border Style="{DynamicResource eventBox}">
                            <TextBox x:Name="DielselstanderSlutBox"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 PreviewTextInput="NumberValidation"
                                 CommandManager.PreviewExecuted="textBox_PreviewExecuted"
                                 ContextMenu="{x:Null}"
                                 KeyDown="nextEnter"/>
                        </Border>

                        <Label x:Name="DefektePærer"
