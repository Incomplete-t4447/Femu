                    <fa:ImageAwesome x:Name="TilbageKnapEvent" Icon="ChevronCircleLeft" Height="48" Width="48" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="1282,0,-939,111" Foreground="White" MouseDown="TilbageKnapEvent_MouseDown" MouseEnter="TilbageKnapEvent_MouseEnter" MouseLeave="TilbageKnapEvent_MouseLeave" />
                    <!-- Page Header -->
                    <!--<TextBox Height="50" Width="160" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="40,0,0,0" Background="Transparent" Text="Event Page" FontSize="30" FontWeight="Bold" Foreground="SteelBlue" BorderThickness="0"></TextBox>-->
