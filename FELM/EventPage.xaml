                    <ColumnDefinition Width="245*" />
                    <ColumnDefinition Width="666*"/>

                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="31*" />
                    <RowDefinition Height="65*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Column="0" Grid.Row="0" Margin="10,0,55,59">
