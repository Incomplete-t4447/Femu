                <TextBox Name="beskrivelseBox" TextChanged="txtSearchBox_TextChanged" Width="120" Visibility="Collapsed" KeyDown="beskrivelseEnter" Margin="134,192,202,28"/>

                <Label Name="TilgangLabel" Visibility="Collapsed" Foreground="LightGray" Margin="282,163,113,59">Tilgang</Label>
