              Grid.Column="0"
        />

                <Grid Grid.Row="0" Grid.ColumnSpan="3" Margin="310,-5,146,5"
        />
                <Grid Grid.Row="1"
              Grid.Column="1" Grid.ColumnSpan="2"
        />


                <WrapPanel Name="EventButtons" Visibility="Visible" Margin="64,32,331,98" Grid.Row="0"  Grid.Column="2" >

