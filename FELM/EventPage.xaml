                    <DataGrid x:Name = "EventVareGrid" AutoGenerateColumns = "False" Background="Transparent" RowBackground="Transparent" Foreground="White" BorderBrush="{x:Null}" Margin="10,54,30,44" IsReadOnly="True" Visibility="Collapsed" >


                        <DataGrid.Columns>

                            <DataGridTextColumn Width="55" Header="Vare Nr." Binding="{Binding VareNr}">

                            </DataGridTextColumn>

                            <DataGridTextColumn Width="76" Header="Beskrivelse" Binding="{Binding Beskrivelse}">

                            </DataGridTextColumn>


                            <DataGridTextColumn Width="78" Header="Stik Tilgang" Binding="{Binding Tilgang}">

                            </DataGridTextColumn>


                            <DataGridTextColumn Width="78" Header="Stik Afgang" Binding="{Binding Afgang}">

                            </DataGridTextColumn>

                            <DataGridTextColumn Width="*" Header="Antal" Binding="{Binding Antal}">

                            </DataGridTextColumn>


                            <DataGridTextColumn Width="*" Header="Status" Binding="{Binding Status}">

                            </DataGridTextColumn>

                            <DataGridTextColumn Width="60" Header="Lokation" Binding="{Binding VareLokation}">

                            </DataGridTextColumn>


                            <DataGridTextColumn Width="55" Header="Ampere" Binding="{Binding Ampere}">

                            </DataGridTextColumn>

                            <DataGridTextColumn Width="*" Header="Pin Nr." Binding="{Binding PinNr}">

                            </DataGridTextColumn>

                            <DataGridTextColumn Width="53" Header="Længde" Binding="{Binding Længde}">

                            </DataGridTextColumn>

                            <DataGridTextColumn Width="83" Header="Webshop Nr." Binding="{Binding WebshopVareNummer}">

                            </DataGridTextColumn>

                            <DataGridTextColumn Width="58" Header="RFID Nr." Binding="{Binding RFIDNummer}">

                            </DataGridTextColumn>

                            <DataGridTextColumn Width="*" Header="Note" Binding="{Binding Note}">

                            </DataGridTextColumn>

                            <DataGridTextColumn Width="*" Header="QR" Binding="{Binding QR}">

                            </DataGridTextColumn>

                            <DataGridTextColumn Width="*" Header="Pris" Binding="{Binding Salgspris}">

                            </DataGridTextColumn>



                        </DataGrid.Columns>
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="{x:Type DataGridColumnHeader}">
                                <Setter Property="Background" Value="Transparent" />
                                <Setter Property="FontWeight" Value="Bold" />
                                <Setter Property="Foreground" Value="LightGray"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>
                    </DataGrid>
                </Grid>

