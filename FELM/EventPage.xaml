                                VerticalContentAlignment="Center"
                                HorizontalContentAlignment="Left"
                                FontWeight="Bold"
                            />

                        <Border Style="{DynamicResource eventBox}">
                            <TextBox x:Name="DefektePærerBox"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 PreviewTextInput="NumberValidation"
                                 CommandManager.PreviewExecuted="textBox_PreviewExecuted"
                                 ContextMenu="{x:Null}"
                                 KeyDown="nextEnter"/>
                        </Border>


                        <Label x:Name="TlfNummer"
                                Content="Tlf Nummer:"
                                Foreground="LightGray"
                                VerticalContentAlignment="Center"
                                HorizontalContentAlignment="Left"
                                FontWeight="Bold"
                            />
                        <Border Style="{DynamicResource eventBox}">
                            <TextBox x:Name="TlfNummerBox"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    PreviewTextInput="NumberValidation"
                                    KeyDown="nextEnter"
                                />
                        </Border>

                        <Label Name="Aktiv"
                                Content="Aktiv:"
                                Foreground="LightGray"
                                VerticalContentAlignment="Center"
                                HorizontalContentAlignment="Left"
                                FontWeight="Bold"
                            ></Label>


                        <ComboBox HorizontalAlignment="Center" Name="AktivComboBox" KeyDown="nextEnterCombox"
                            >
                            <ComboBoxItem IsSelected="True">Ja</ComboBoxItem>
                            <ComboBoxItem>Nej</ComboBoxItem>
                        </ComboBox>

                        <Label Name="brugerId"
                                Content="Bruger Id:"
                                Foreground="LightGray"
                                VerticalContentAlignment="Center"
                                HorizontalContentAlignment="Left"
                                FontWeight="Bold"
                            ></Label>


                        <ComboBox HorizontalAlignment="Center" Name="brugerIdComboBox"
                            >
                            <ComboBoxItem IsSelected="True">Ja</ComboBoxItem>
                            <ComboBoxItem>Nej</ComboBoxItem>
                        </ComboBox>

                        <Button Name="RedigerGem" Grid.Column="0" Grid.Row="1" Content="Gem redigering"  Style="{DynamicResource eventBtn}" Margin="0,10,0,0" Click="RedigerGem_button" Visibility="Collapsed" VerticalAlignment="Top"/>
                        <Button Name="RedigerEventAnnuller" Grid.Column="0" Grid.Row="1" Content="Annuller"  Style="{DynamicResource eventBtn}" Margin="0,10,0,0" Click="AnnullerEventRedigering" Visibility="Collapsed" VerticalAlignment="Top"/>
                        <Button Content="Tilføj Event" Name="addEvent" Grid.Column="0" Grid.Row="1" Style="{DynamicResource eventBtn}" Click="Tilføj_Button" Margin="0,10,0,0" Visibility="Visible" VerticalAlignment="Top" />

                    </StackPanel>
                </ScrollViewer>
                <StackPanel
                    Name="addLokationStack"
                    Grid.Row="1"
                    Grid.Column="0"
                    Orientation="Vertical"
                    Margin="80,60"
                    Visibility="Collapsed"
                    >

                    <Label Name="lokationAddLabel"
                        Content="Lokation:"
                        Foreground="LightGray"
                        VerticalContentAlignment="Center"
                        HorizontalContentAlignment="Left"
                        FontWeight="Bold"
                    >
                    </Label>
                    <Border Style="{DynamicResource eventBox}">
                        <TextBox Name="lokationAdd"
                             Background="Transparent"
                             BorderThickness="0"
                             KeyDown="tilføjLokationEnter">
                        </TextBox>
                    </Border>


                    <Button Name="addLokationButton" Content="Tilføj" Style="{DynamicResource eventBtn}" Margin="30,30,30,30" Click="addLokationButton_Click"/>


                    <Button
                        Style="{DynamicResource eventBtn}"
                        Click="Annuller_Click"
                        Content="Annuller"
                    />

                </StackPanel>


                <StackPanel
                    x:Name="redigerLokationStack"
                    Grid.Row="1"
                    Grid.Column="0"
                    Orientation="Vertical"
                    Margin="80,60"
                    Visibility="Collapsed"
                    >
                    <Label
                        x:Name="lokationRedigerLabel"
                        Content="Lokation"
                        Foreground="White"
                        VerticalContentAlignment="Center"
                        HorizontalContentAlignment="Center"
                        FontWeight="Bold"
                    />
                    <TextBox
                        x:Name="lokationRedigerBox"
                        BorderThickness="0"
                        Height="30"
                        Margin="0,15"
                        Padding="10,6"
                        KeyDown="redigerLokationEnter">
                        <TextBox.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </TextBox.Resources>
                    </TextBox>
                    <Button x:Name="redigerLokation" Content="Rediger Lokation" Style="{DynamicResource eventBtn}" Margin="0,15" Click="RedigereLokationButton_Click"/>
                    <Button x:Name="redigerAnnuller" Content="Annuller" Style="{DynamicResource eventBtn}" Click="Annuller_Click"/>

                </StackPanel>

                <ScrollViewer x:Name="lokationScroll" Grid.Row="1" Grid.Column="0" Margin="48,50,41,50" Visibility="Collapsed" VerticalScrollBarVisibility="Auto">
                    <StackPanel x:Name="lokationPanel" Visibility="Collapsed"/>
                </ScrollViewer>

                <StackPanel
                    Name="StatusPanel"
                    Grid.Row="1"
                    Grid.Column="0"
                    Orientation="Vertical"
                    Margin="80,60"
                    Visibility="Collapsed"
                    >
                    <Label
                        x:Name="ChangeStatusLabel"
                        Content="Status"
                        Foreground="White"
                        VerticalContentAlignment="Center"
                        HorizontalContentAlignment="Center"
                        FontWeight="Bold"
                    />
                    <ComboBox
                        x:Name="ChangeStatusBox"
                        BorderThickness="0"
                        Height="30"
                        Margin="0,15"
                        Padding="10,6"
                        KeyDown="changeStatusEnter">
                        <ComboBox.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </ComboBox.Resources>
                        <ComboBoxItem>Reparation</ComboBoxItem>
                        <ComboBoxItem>Bortkommet</ComboBoxItem>
                        <ComboBoxItem>Ødelagt</ComboBoxItem>
                    </ComboBox>

                    <Button x:Name="ConfirmStatusChangeButton" Content="Rediger Status" Style="{DynamicResource eventBtn}" Click="ConfirmStatusChangeButton_Click" />

                    <Button Content="Annuller" Style="{DynamicResource eventBtn}" Margin="0,10" Click="Annuller_Click" />

                </StackPanel>

                <StackPanel
                    Name="KopierEventPanel"
                    Grid.Row="1"
                    Grid.Column="0"
                    Orientation="Vertical"
                    Margin="80,60"
                    Visibility="Collapsed"
                    >
                    <Label
                        x:Name="CopyEventLabel"
                        Content="Kopier Event"
                        Foreground="White"
                        VerticalContentAlignment="Center"
                        HorizontalContentAlignment="Center"
                        FontWeight="Bold"
                        FontSize="24"
                    />
                    <Label
                        Content="Nyt Event Navn"
                        Foreground="White"
                        VerticalContentAlignment="Center"
                        HorizontalContentAlignment="Center"
                        FontWeight="Bold"
                    />
                    <Border
                        Style="{DynamicResource eventBox}"
                        Width="160"
                        Margin="0,0,0,10"
                    >
                        <TextBox x:Name="NewEventName"
                            Background="Transparent"
                            BorderThickness="0"
                            KeyDown="nextEnter"
                        />
                    </Border>

                    <CheckBox x:Name="checkBoxKopir"
                        BorderThickness="1" Content="Kopier Lokation"
                        Foreground="White"
                        Checked="checkBoxKopir_Checked"
                        Unchecked="checkBoxKopir_Unchecked"
                        Margin="89,0,93,0"
                        KeyDown="nextEnterCheckbox"
                    />

                    <Button x:Name="ShowVareCopy" Content="Vis Varer der kopieres" Style="{DynamicResource eventBtn}" Margin="0,7.5" Click="ShowVareCopy_Click" />

                    <Button x:Name="ConfirmCopyEvent" Content="Bekræft Kopiering" Style="{DynamicResource eventBtn}" Margin="0,7.5" Click="ConfirmCopyEvent_Click" />

                    <Button x:Name="KopierAnnuller" Content="Annuller" Style="{DynamicResource eventBtn}" Margin="0,7.5" Click="Annuller_Click" />

                </StackPanel>

                <ScrollViewer Grid.Row="1" Grid.Column="0" Margin="48,50,41,50" Visibility="Collapsed" VerticalScrollBarVisibility="Auto" Name="EventsStackPanelView">
                    <StackPanel Name="EventsStackPanel"   RenderTransformOrigin="0.489,0.659" Grid.ColumnSpan="2" Grid.Row="2"  Margin="21,25,10,0"/>
                </ScrollViewer>
                <Label x:Name="eventAktivLabel" Visibility="Collapsed" Foreground="LightGray" Margin="287,0,87,492" Grid.Row="1">Aktive Events</Label>
                <CheckBox x:Name="aktivCheck" Margin="381,7,47,486" Grid.Row="1" RenderTransformOrigin="-1.482,0.396" Visibility="Collapsed" Unchecked="aktivCheck_Unchecked" Checked="aktivCheck_Checked"></CheckBox>

                <StackPanel
                    Name="OmbytVarePanel"
                    Grid.Row="1"
                    Grid.Column="0"
                    Orientation="Vertical"
                    Margin="80,60"
                    Visibility="Collapsed"
                    >

                    <Label x:Name="eventVareLabel" Foreground="White" Margin="0,1" Content="Vælg en vare først" HorizontalAlignment="Center"/>

                    <ComboBox x:Name="eventComboBox" Width="130" HorizontalAlignment="Center" Margin="0,5" KeyDown="ombytteEnter"></ComboBox>

                    <Button x:Name="ombytteVareButton" Content="Skift lokation" Style="{DynamicResource eventBtn}" Margin="0,0" Click="ombytteVareButton_Click"/>

                    <Button x:Name="ombytteAnnuller" Content="Annuller" Style="{DynamicResource eventBtn}" Click="ombytteAnnuller_Click" Margin="0,5" />

                </StackPanel>

                <Border
                    Grid.Row="1"
                    Grid.Column="1"
                    x:Name="EventGridBorder"
                    Padding="1"
                    CornerRadius="25"
                    BorderThickness="0"
                    BorderBrush="#FF008D7A"
                    SnapsToDevicePixels="True"
                    Background="#FF002657"
                    Opacity="0.5"
                    Margin='30' Grid.ColumnSpan="2"
                >

                    <Border.Effect>
                        <DropShadowEffect/>
                    </Border.Effect>


                </Border>
                <Grid Grid.Row="1" Grid.Column="1"  Margin="39,47,30,50" Grid.ColumnSpan="2">

                    <DataGrid x:Name = "EventGrid" AutoGenerateColumns = "False" Background="Transparent" RowBackground="Transparent" Foreground="White" BorderBrush="{x:Null}" Margin="0,0,0,10" IsReadOnly="True">


                        <DataGrid.Columns>

                            <!--<DataGridTextColumn Width="*" Binding="{Binding EventId}">
                                <DataGridTextColumn.Header>
                                    <TextBlock Text="Event Id" TextWrapping="Wrap"/>
                                </DataGridTextColumn.Header>
                            </DataGridTextColumn>-->

                            <DataGridTextColumn Width="*" Binding="{Binding EventName}">
                                <DataGridTextColumn.Header>
                                    <TextBlock Text="Event Navn" TextWrapping="Wrap"/>
                                </DataGridTextColumn.Header>
                            </DataGridTextColumn>


                            <DataGridTextColumn Width="*" Binding="{Binding StartDato}">
                                <DataGridTextColumn.Header>
                                    <TextBlock Text="Start Dato" TextWrapping="Wrap"/>
                                </DataGridTextColumn.Header>
                            </DataGridTextColumn>


                            <DataGridTextColumn Width="*" Binding="{Binding SlutDato}">
                                <DataGridTextColumn.Header>
                                    <TextBlock Text="SlutDato" TextWrapping="Wrap"/>
                                </DataGridTextColumn.Header>
                            </DataGridTextColumn>

                            <DataGridTextColumn Width="*" Binding="{Binding Note}">
                                <DataGridTextColumn.Header>
                                    <TextBlock Text="Note" TextWrapping="Wrap"/>
                                </DataGridTextColumn.Header>
                            </DataGridTextColumn>


                            <DataGridTextColumn Width="*" Binding="{Binding DieselstanderStart}">
                                <DataGridTextColumn.Header>
                                    <TextBlock Text="Diesel Stander Start" TextWrapping="Wrap"/>
                                </DataGridTextColumn.Header>
                            </DataGridTextColumn>

                            <DataGridTextColumn Width="*"  Binding="{Binding DielselstanderSlut}">
                                <DataGridTextColumn.Header>
                                    <TextBlock Text="Dielsel Stander Slut" TextWrapping="Wrap"/>
                                </DataGridTextColumn.Header>
                            </DataGridTextColumn>


                            <DataGridTextColumn Width="*" Binding="{Binding DefektePærer}">
                                <DataGridTextColumn.Header>
                                    <TextBlock Text="Defekte Pærer" TextWrapping="Wrap"/>
                                </DataGridTextColumn.Header>
                            </DataGridTextColumn>

                            <DataGridTextColumn Width="*" Binding="{Binding TlfNummer}">
                                <DataGridTextColumn.Header>
                                    <TextBlock Text="Tlf Nummer" TextWrapping="Wrap"/>
                                </DataGridTextColumn.Header>
                            </DataGridTextColumn>

                            <DataGridTextColumn Width="*" Binding="{Binding Aktiv}">
                                <DataGridTextColumn.Header>
                                    <TextBlock Text="Aktiv" TextWrapping="Wrap"/>
                                </DataGridTextColumn.Header>
                            </DataGridTextColumn>

                            <DataGridTextColumn Width="*" Binding="{Binding BrugerId}">
                                <DataGridTextColumn.Header>
                                    <TextBlock Text="brugerId" TextWrapping="Wrap"/>
                                </DataGridTextColumn.Header>
                            </DataGridTextColumn>


                        </DataGrid.Columns>

                        <DataGrid.Resources>
                            <Style TargetType="{x:Type DataGridRow}">
                                <EventSetter Event="MouseDoubleClick" Handler="EventGrid_MouseDoubleClick"></EventSetter>
                            </Style>
                        </DataGrid.Resources>
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="{x:Type DataGridColumnHeader}">
                                <Setter Property="Background" Value="Transparent" />
                                <Setter Property="FontWeight" Value="Bold" />
                                <Setter Property="Foreground" Value="LightGray"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>
                    </DataGrid>
                </Grid>




                <Border
                    x:Name="EventsBorder"
                    Grid.Row="1"
                    Grid.Column="0"
                    Padding="1"
                    CornerRadius="25"
                    BorderThickness="0"
                    BorderBrush="#FF008D7A"
                    SnapsToDevicePixels="True"
                    Background="#FF008D7A"
                    Margin="30"
                    Visibility ="Hidden"
                >


                    <Border.Effect>
                        <DropShadowEffect/>
                    </Border.Effect>

                </Border>

                <Border
                    Grid.Row="1"
                    Grid.Column="1"

                    Padding="1"
                    CornerRadius="25"
                    BorderThickness="0"
                    BorderBrush="#FF008D7A"
                    SnapsToDevicePixels="True"
                    Background="#FF002657"
                    Opacity="0.5"
                    Margin='0,30,30,30'
                    x:Name="EventVareBorder"
                    Visibility="Collapsed" Grid.ColumnSpan="2"
                    >


                    <Border.Effect>
                        <DropShadowEffect/>
                    </Border.Effect>
                </Border>

