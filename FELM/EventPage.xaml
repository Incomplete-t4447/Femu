                    <Button x:Name="events" Content="Events" Style="{DynamicResource eventBtn}" Margin="2" Click="Start_Events"/>
                    <Button x:Name="addLokation" Content="Tilføj Lokation" Style="{DynamicResource eventBtn}" Margin="2" Click="addLokation_Click"/>

